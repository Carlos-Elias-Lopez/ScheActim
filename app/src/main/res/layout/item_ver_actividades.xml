<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imagen_actividad"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/clock">

        </ImageView>

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo de la actividad"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagen_actividad"
            android:layout_toEndOf="@id/imagen_actividad"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">
        </TextView>
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="14sp"
            android:layout_below="@id/tv_titulo"
            android:layout_toRightOf="@id/imagen_actividad"
            android:layout_toEndOf="@id/imagen_actividad"
            android:layout_marginStart="10dp"
            tools:text="Finalizar los ejercicios relacionados con la unidad de GeometrÃ­a Euclideana"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/fecha_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-01-20"
            android:layout_toRightOf="@id/imagen_actividad"
            android:layout_toEndOf="@id/imagen_actividad"
            android:layout_below="@+id/tv_descripcion"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="10dp">
        </TextView>
        <TextView
            android:id="@+id/fecha_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-01-20"
            android:layout_toRightOf="@id/imagen_actividad"
            android:layout_toEndOf="@id/imagen_actividad"
            android:layout_below="@+id/tv_descripcion"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="155dp">
        </TextView>
        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:layout_toRightOf="@id/imagen_actividad"
            android:layout_toEndOf="@id/imagen_actividad"
            android:layout_below="@+id/fecha_fin"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="10dp">
        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>